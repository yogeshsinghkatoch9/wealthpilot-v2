<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - WealthPilot Pro</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@400" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; background: #0f0f0f; }
    .material-symbols-outlined { font-variation-settings: 'FILL' 0, 'wght' 400; vertical-align: middle; }
  </style>
</head>
<body class="min-h-screen text-white">

  <!-- Navigation -->
  <nav class="bg-gray-900/80 backdrop-blur-lg border-b border-gray-800 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between h-16">
        <div class="flex items-center space-x-8">
          <a href="/dashboard" class="text-xl font-bold text-white">WealthPilot</a>
          <div class="hidden md:flex space-x-4">
            <a href="/dashboard" class="text-white px-3 py-2 rounded-lg bg-gray-800">Dashboard</a>
            <a href="/watchlist" class="text-gray-400 hover:text-white px-3 py-2">Watchlist</a>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <!-- Market Indices -->
          <div class="hidden lg:flex items-center space-x-4 text-sm">
            <% if (indices && indices.length > 0) { %>
              <% indices.forEach(idx => { %>
                <div class="flex items-center space-x-2">
                  <span class="text-gray-400"><%= idx.symbol %></span>
                  <span class="<%= idx.changePercent >= 0 ? 'text-green-400' : 'text-red-400' %>">
                    <%= idx.changePercent >= 0 ? '+' : '' %><%= (idx.changePercent || 0).toFixed(2) %>%
                  </span>
                </div>
              <% }) %>
            <% } %>
          </div>
          <a href="/logout" class="text-gray-400 hover:text-white">
            <span class="material-symbols-outlined">logout</span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Welcome Section -->
    <div class="mb-8">
      <h1 class="text-2xl font-bold">Welcome back!</h1>
      <p class="text-gray-400 mt-1">Here's an overview of your portfolios</p>
    </div>

    <!-- Portfolios Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% if (portfolios && portfolios.length > 0) { %>
        <% portfolios.forEach(portfolio => { %>
          <a href="/portfolio/<%= portfolio.id %>" class="block">
            <div class="bg-gray-800/50 rounded-xl p-6 border border-gray-700 hover:border-indigo-500 transition-colors">
              <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold"><%= portfolio.name %></h3>
                <% if (portfolio.isDefault) { %>
                  <span class="text-xs bg-indigo-500/20 text-indigo-400 px-2 py-1 rounded">Default</span>
                <% } %>
              </div>

              <div class="space-y-3">
                <div class="flex justify-between">
                  <span class="text-gray-400">Holdings</span>
                  <span><%= portfolio.holdingsCount || 0 %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-400">Transactions</span>
                  <span><%= portfolio.transactionsCount || 0 %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-400">Cash Balance</span>
                  <span>$<%= (portfolio.cashBalance || 0).toLocaleString() %></span>
                </div>
              </div>
            </div>
          </a>
        <% }) %>
      <% } else { %>
        <div class="col-span-full text-center py-12">
          <span class="material-symbols-outlined text-5xl text-gray-600 mb-4">folder_open</span>
          <p class="text-gray-400">No portfolios yet</p>
        </div>
      <% } %>

      <!-- Create New Portfolio Card -->
      <div class="bg-gray-800/30 rounded-xl p-6 border border-dashed border-gray-700 hover:border-gray-500 transition-colors cursor-pointer flex items-center justify-center min-h-[200px]"
           onclick="document.getElementById('createPortfolioModal').classList.remove('hidden')">
        <div class="text-center">
          <span class="material-symbols-outlined text-4xl text-gray-500 mb-2">add_circle</span>
          <p class="text-gray-400">Create New Portfolio</p>
        </div>
      </div>
    </div>
  </main>

  <!-- Create Portfolio Modal -->
  <div id="createPortfolioModal" class="hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-gray-800 rounded-xl p-6 w-full max-w-md border border-gray-700">
      <h3 class="text-xl font-semibold mb-4">Create Portfolio</h3>
      <form id="createPortfolioForm" class="space-y-4">
        <div>
          <label class="block text-sm text-gray-400 mb-1">Name</label>
          <input type="text" name="name" required
                 class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>
        <div>
          <label class="block text-sm text-gray-400 mb-1">Description</label>
          <input type="text" name="description"
                 class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>
        <div class="flex space-x-3 pt-4">
          <button type="button" onclick="document.getElementById('createPortfolioModal').classList.add('hidden')"
                  class="flex-1 py-2 bg-gray-700 hover:bg-gray-600 rounded-lg">Cancel</button>
          <button type="submit" class="flex-1 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-lg">Create</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.getElementById('createPortfolioForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target);
      const data = Object.fromEntries(formData);

      try {
        const res = await fetch('/api/portfolios', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (res.ok) {
          window.location.reload();
        } else {
          const err = await res.json();
          alert(err.error || 'Failed to create portfolio');
        }
      } catch (err) {
        alert('Failed to create portfolio');
      }
    });
  </script>

</body>
</html>
