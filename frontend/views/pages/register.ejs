        </svg>
      </div>
      <h2 class="text-white text-xl font-bold leading-tight tracking-[-0.015em]">WealthPilot Pro</h2>
    </div>
    <div class="flex items-center gap-9">
      <a class="text-text-secondary hover:text-white transition-colors text-sm font-medium leading-normal" href="#">Help</a>
      <a class="text-text-secondary hover:text-white transition-colors text-sm font-medium leading-normal" href="/login">Log in</a>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-grow flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-[500px] flex flex-col gap-6">
      <!-- Heading -->
      <div class="flex flex-col gap-2 text-center mb-4">
        <h1 class="text-white text-3xl sm:text-4xl font-black leading-tight tracking-[-0.033em]">Create Your Account</h1>
        <p class="text-text-secondary text-base font-normal leading-normal">Start managing your professional portfolio today.</p>
      </div>

      <!-- Form Card -->
      <div class="bg-surface-dark border border-border-dark rounded-xl p-8 shadow-xl">
        <!-- Error Message -->
        <% if (typeof error !== 'undefined' && error) { %>
          <div class="mb-6 p-4 bg-red-500/10 border border-red-500/50 rounded-lg">
            <p class="text-red-400 text-sm flex items-center gap-2">
              <span class="material-symbols-outlined text-[18px]">error</span>
              <%= error %>
            </p>
          </div>
        <% } %>

        <form id="registerForm" class="flex flex-col gap-5" method="POST" action="/register">
          <!-- Full Name -->
          <div class="flex flex-col gap-2">
            <label class="text-white text-sm font-medium leading-normal" for="fullname">Full Name</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-text-secondary">
                <span class="material-symbols-outlined text-[20px]">person</span>
              </span>
              <input
                class="form-input flex w-full min-w-0 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-border-dark bg-[#111217] focus:border-primary h-12 placeholder:text-text-secondary pl-10 pr-4 text-base font-normal leading-normal transition-all"
                id="fullname"
                name="fullName"
                placeholder="Enter your full name"
                type="text"
                required
              />
            </div>
          </div>

          <!-- Email Address -->
          <div class="flex flex-col gap-2">
            <label class="text-white text-sm font-medium leading-normal" for="email">Email Address</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-text-secondary">
                <span class="material-symbols-outlined text-[20px]">mail</span>
              </span>
              <input
                class="form-input flex w-full min-w-0 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-border-dark bg-[#111217] focus:border-primary h-12 placeholder:text-text-secondary pl-10 pr-4 text-base font-normal leading-normal transition-all"
                id="email"
                name="email"
                placeholder="name@company.com"
                type="email"
                required
              />
            </div>
          </div>

          <!-- Password -->
          <div class="flex flex-col gap-2">
            <label class="text-white text-sm font-medium leading-normal" for="password">Password</label>
            <div class="relative group">
              <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-text-secondary">
                <span class="material-symbols-outlined text-[20px]">lock</span>
              </span>
              <input
                class="form-input flex w-full min-w-0 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-border-dark bg-[#111217] focus:border-primary h-12 placeholder:text-text-secondary pl-10 pr-10 text-base font-normal leading-normal transition-all"
                id="password"
                name="password"
                placeholder="Create a password"
                type="password"
                required
                minlength="8"
              />
              <button class="absolute inset-y-0 right-0 pr-3 flex items-center text-text-secondary hover:text-white transition-colors focus:outline-none" type="button" onclick="togglePassword('password', this)">
                <span class="material-symbols-outlined text-[20px]">visibility_off</span>
              </button>
            </div>
            <!-- Password Strength Indicator -->
            <div class="flex gap-1 mt-1 h-1">
              <div id="strength-1" class="flex-1 bg-border-dark rounded-full transition-colors"></div>
              <div id="strength-2" class="flex-1 bg-border-dark rounded-full transition-colors"></div>
              <div id="strength-3" class="flex-1 bg-border-dark rounded-full transition-colors"></div>
              <div id="strength-4" class="flex-1 bg-border-dark rounded-full transition-colors"></div>
            </div>
            <p id="strength-text" class="text-xs text-text-secondary mt-1">Enter a password</p>
            <div class="flex flex-wrap gap-2 mt-1">
              <span id="check-length" class="inline-flex items-center gap-1 text-xs text-text-secondary">
                <span class="material-symbols-outlined text-[14px]">radio_button_unchecked</span> 8+ chars
              </span>
              <span id="check-number" class="inline-flex items-center gap-1 text-xs text-text-secondary">
                <span class="material-symbols-outlined text-[14px]">radio_button_unchecked</span> 1 number
              </span>
              <span id="check-special" class="inline-flex items-center gap-1 text-xs text-text-secondary">
                <span class="material-symbols-outlined text-[14px]">radio_button_unchecked</span> 1 special char
              </span>
            </div>
          </div>

          <!-- Confirm Password -->
          <div class="flex flex-col gap-2">
            <label class="text-white text-sm font-medium leading-normal" for="confirm-password">Confirm Password</label>
            <div class="relative">
              <span class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-text-secondary">
                <span class="material-symbols-outlined text-[20px]">lock_reset</span>
              </span>
              <input
                class="form-input flex w-full min-w-0 resize-none overflow-hidden rounded-lg text-white focus:outline-0 focus:ring-2 focus:ring-primary/50 border border-border-dark bg-[#111217] focus:border-primary h-12 placeholder:text-text-secondary pl-10 pr-4 text-base font-normal leading-normal transition-all"
                id="confirm-password"
                name="confirmPassword"
                placeholder="Confirm your password"
                type="password"
                required
              />
            </div>
            <p id="password-match" class="text-xs text-text-secondary mt-1 hidden">
              <span class="material-symbols-outlined text-[14px] align-middle">error</span> Passwords do not match
            </p>
          </div>

          <!-- Terms Checkbox -->
          <div class="flex items-start gap-3 mt-2">
            <div class="flex h-6 items-center">
              <input
                class="h-5 w-5 rounded border-border-dark bg-[#111217] text-primary focus:ring-primary focus:ring-offset-background-dark cursor-pointer transition-colors"
                id="terms"
                name="terms"
                type="checkbox"
                required
              />
            </div>
            <div class="text-sm leading-6">
              <label class="font-normal text-text-secondary select-none" for="terms">
                I agree to the <a class="font-medium text-primary hover:text-primary/80 underline decoration-1 underline-offset-2 transition-colors" href="#">Terms of Service</a> and <a class="font-medium text-primary hover:text-primary/80 underline decoration-1 underline-offset-2 transition-colors" href="#">Privacy Policy</a>
              </label>
            </div>
          </div>

          <!-- Submit Button -->
          <button
            id="submitBtn"
            class="mt-2 flex w-full justify-center items-center gap-2 rounded-lg bg-primary px-3 py-3.5 text-sm font-bold leading-6 text-white shadow-sm hover:bg-primary/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary transition-all active:scale-[0.98] disabled:opacity-50 disabled:cursor-not-allowed"
            type="submit"
          >
            <span id="btn-text">Sign Up</span>
            <span id="btn-icon" class="material-symbols-outlined text-[20px]">arrow_forward</span>
            <span id="btn-spinner" class="hidden">
              <svg class="animate-spin h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </span>
          </button>
        </form>

        <!-- Login Link -->
        <p class="mt-8 text-center text-sm text-text-secondary">
          Already have an account?
          <a class="font-bold leading-6 text-primary hover:text-primary/80 hover:underline transition-all" href="/login">Log in</a>
        </p>
      </div>

      <!-- Trust Indicators -->
      <div class="flex justify-center items-center gap-6 opacity-60 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-500">
        <div class="h-8 w-auto flex items-center text-text-secondary font-bold gap-1">
          <span class="material-symbols-outlined">security</span> <span class="text-sm">Bank-Grade Security</span>
        </div>
        <div class="h-8 w-auto flex items-center text-text-secondary font-bold gap-1">
          <span class="material-symbols-outlined">verified_user</span> <span class="text-sm">SEC Compliant</span>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="py-6 border-t border-border-dark text-center">
    <p class="text-xs text-text-secondary">Â© 2024 WealthPilot Pro. All rights reserved.</p>
  </footer>

  <script>
    // Toggle password visibility
    function togglePassword(inputId, button) {
      const input = document.getElementById(inputId);
      const icon = button.querySelector('.material-symbols-outlined');

      if (input.type === 'password') {
        input.type = 'text';
        icon.textContent = 'visibility';
      } else {
        input.type = 'password';
        icon.textContent = 'visibility_off';
      }
    }

    // Password strength checker
    const passwordInput = document.getElementById('password');
    const confirmInput = document.getElementById('confirm-password');

    passwordInput.addEventListener('input', function() {
      const password = this.value;
      let strength = 0;

      // Check length
      const hasLength = password.length >= 8;
      // Check number
      const hasNumber = /\d/.test(password);
      // Check special char
      const hasSpecial = /[!@#$%^&*(),.?":{}|<>]/.test(password);

      // Update indicators
      updateCheck('check-length', hasLength);
      updateCheck('check-number', hasNumber);
      updateCheck('check-special', hasSpecial);

      // Calculate strength
      if (hasLength) strength++;
      if (hasNumber) strength++;
      if (hasSpecial) strength++;
      if (password.length >= 12) strength++;

      // Update strength bars
      updateStrengthBars(strength);

      // Check password match
      checkPasswordMatch();
    });

    confirmInput.addEventListener('input', checkPasswordMatch);

    function updateCheck(id, passed) {
      const el = document.getElementById(id);
      const icon = el.querySelector('.material-symbols-outlined');

      if (passed) {
        el.classList.remove('text-text-secondary');
        el.classList.add('text-green-500');
        icon.textContent = 'check';
      } else {
        el.classList.remove('text-green-500');
        el.classList.add('text-text-secondary');
        icon.textContent = 'radio_button_unchecked';
      }
    }

    function updateStrengthBars(strength) {
      const colors = {
        0: ['bg-border-dark', 'bg-border-dark', 'bg-border-dark', 'bg-border-dark'],
        1: ['bg-red-500', 'bg-border-dark', 'bg-border-dark', 'bg-border-dark'],
        2: ['bg-orange-500', 'bg-orange-500', 'bg-border-dark', 'bg-border-dark'],
        3: ['bg-yellow-500', 'bg-yellow-500', 'bg-yellow-500', 'bg-border-dark'],
        4: ['bg-green-500', 'bg-green-500', 'bg-green-500', 'bg-green-500']
      };

      const texts = {
        0: 'Enter a password',
        1: 'Weak password',
        2: 'Fair password',
        3: 'Good password',
        4: 'Strong password'
      };

      for (let i = 1; i <= 4; i++) {
        const bar = document.getElementById(`strength-${i}`);
        bar.className = `flex-1 rounded-full transition-colors ${colors[strength][i-1]}`;
      }

      document.getElementById('strength-text').textContent = texts[strength];
    }

    function checkPasswordMatch() {
      const password = passwordInput.value;
      const confirm = confirmInput.value;
      const matchEl = document.getElementById('password-match');

      if (confirm.length > 0 && password !== confirm) {
        matchEl.classList.remove('hidden');
        matchEl.classList.add('text-red-400');
      } else {
        matchEl.classList.add('hidden');
      }
    }

    // Form submission
    document.getElementById('registerForm').addEventListener('submit', function(e) {
      const password = passwordInput.value;
      const confirm = confirmInput.value;

      if (password !== confirm) {
        e.preventDefault();
        document.getElementById('password-match').classList.remove('hidden');
        return;
      }

      // Show loading state
      document.getElementById('btn-text').textContent = 'Creating account...';
      document.getElementById('btn-icon').classList.add('hidden');
      document.getElementById('btn-spinner').classList.remove('hidden');
      document.getElementById('submitBtn').disabled = true;
    });
  </script>
